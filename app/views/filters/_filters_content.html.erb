<div class="filters-display" data-options-target="result">
  <% grouped_options.each do |feature, options| %>
    <div class="mb-2">
      <div class="feature-name" data-category-target="featuredisplay"><h3><%= feature.title %></h3></div>
      <div class="d-flex">
        <% options.each do |option| %>
          <div class="px-2"><%= option.value %></div>
        <% end %>
      </div>
    </div>
  <% end %>
    <div class="w-100% d-flex justify-content-center p-2">
    <%= link_to edit_research_path(research) do %>
      <button class="btn-options-formula-box">Your choosen formula</button>
    <% end %>
  </div>
</div>
